<div class="card">

  <%= form_for user_password_path  do |f| %>

    <div class="card-body">

      <div class="form-group">
        <%= f.label :password, "Old Password" %>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>


      <div class="form-group">
        <%= f.label :new_password, "New Password" %>
        <%= f.password_field :new_password, class: 'form-control', required: true %>
      </div>


      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
      </div>


    </div>

    <div class="card-footer">
      <%= submit_tag "Save", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

</div>