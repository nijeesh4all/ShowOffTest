<div class="modal-dialog  modal-dialog-centered modal-login">
  <div class="modal-content">
    <%= form_with url: login_path, method: :post do |f|%>
      <div class="modal-header">
        <h4 class="modal-title">Login</h4>
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      </div>

      <div class="modal-body">
        <div class="form-group" id="email_field">
          <%= label_tag :email, "Email", for: 'username' %>
          <%= text_field_tag :email, params[:email],class:"form-control", required: true %>
        </div>
        <div class="form-group" id="password_field" style="display: none">
          <div class="clearfix">
            <%= label_tag :password, "password", for: 'password' %>
            <%= link_to forgot_password_path , class: 'pull-right text-muted', remote: true  do %>
              <small>Forgot?</small>
            <% end %>
          </div>
          <%= password_field_tag :password,"", class: 'form-control'%>
        </div>
      </div>
      <div class="modal-footer">
        <%= submit_tag "Login",class: 'btn btn-primary btn-block', commit:'login',id: 'login_button', style:"display: none" %>
        <%= submit_tag "Next",class: 'btn btn-primary btn-block', commit: 'check_email',id: 'next_button' %>
        <%= link_to "Register", new_user_path, remote: true, class: 'btn btn-outline-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
